#!/bin/sh -eux

ub_compile \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_PREFIX_PATH=/usr/lib/qt5 \
	-DPYTHON_LIBRARIES=/usr/lib/python-3.5 \
	-DPYTHON_INCLUDE_DIRS=/usr/include/python-3.5 \
	-DBUILD_SHARED_LIBS=ON \
	-DBUILD_DOCS=ON \
	-DBUILD_ANDROID_EXAMPLES=OFF \
	-DBUILD_PACKAGE=OFF \
	-DBUILD_WITH_DEBUG_INFO=OFF \
	-DBUILD_TESTS=OFF \
	-DBUILD_PERF_TESTS=OFF \
	-DENABLE_SSE=OFF \
	-DENABLE_SSE2=OFF \
	-DENABLE_SSE3=OFF \
	-DENABLE_SSSE3=OFF \
	-DENABLE_SSE41=OFF \
	-DENABLE_SSE42=OFF \
	-DENABLE_FAST_MATH=OFF \
	-DENABLE_PROFILING=OFF \
	-DWITH_AVFOUNDATION=OFF \
	-DWITH_VFW=OFF \
	-DWITH_GTK_2_X=OFF \
	-DWITH_QT=5 \
	-DWITH_OPENGL=ON \
	-DWITH_PVAPI=OFF \
	-DWITH_QUICKTIME=OFF \
	-DWITH_GIGEAPI=OFF \
	-DWITH_WIN32UI=OFF \
	-DWITH_UNICAP=OFF \
	-DWITH_XINE=ON \
	-DWITH_CLP=OFF \
	-DWITH_CUDA=OFF \
	-DWITH_CUBLAS=OFF \
	-DWITH_CUFFT=OFF \
	-DWITH_NVCUVID=OFF \
	-DOPENCV_DOC_INSTALL_PATH=/usr/share/doc/OpenCV
